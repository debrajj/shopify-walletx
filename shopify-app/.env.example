# Shopify App Configuration
SHOPIFY_API_KEY=your_api_key_here
SHOPIFY_API_SECRET=your_api_secret_here
SHOPIFY_API_VERSION=2024-01
SCOPES=write_products,read_customers,write_customers,read_orders,write_orders,read_discounts,write_discounts,read_payment_customizations,write_payment_customizations
HOST=https://your-app-url.com

# App Configuration
PORT=3000
NODE_ENV=development
APP_URL=https://your-app-url.com

# Database Configuration - PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=shopify_coin_rewards
DB_USER=postgres
DB_PASSWORD=your_database_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws

# Security
SESSION_SECRET=your_session_secret_here
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_32_character_encryption_key

# Coin System Configuration
DEFAULT_EXCHANGE_RATE=100
DEFAULT_WELCOME_BONUS=500
DEFAULT_MIN_REDEMPTION=100
DEFAULT_MAX_REDEMPTION=10000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Feature Flags
ENABLE_REAL_TIME_SYNC=true
ENABLE_FRAUD_DETECTION=true
ENABLE_ANALYTICS=true
